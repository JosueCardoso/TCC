@model Estimatz.UI.Models.LoginModel
@using Estimatz.UI.Resources;
@{    
    ViewData["Title"] = Language.GetString("HomePage");    
}

<div class="container" style="height: 80vh">
    <div class="row align-items-center m-auto" style="height: 90vh">

        @*Logotipo para tela grande*@
        <div class="col-12 col-lg-8 d-none d-lg-block">
            <img src="~/images/@Language.GetLogoName()" class="w-75"/>
        </div>

        @*Logotipo para tela pequena*@
        <div class="col-12 d-block d-lg-none">
            <img src="~/images/@Language.GetLogoName()" class="w-100" />
        </div>

        @*Form de login*@
        <div id="formLoginContent" class="col-12 col-lg-4">
            <form id="loginForm" class="needs-validation" novalidate>
                <div class="form-floating mb-3">                    
                    <input type="email" class="form-control form-control-lg" id="inputEmail" aria-describedby="emailHelp" placeholder="E-mail" asp-for="Email" required>
                    <label for="inputEmail" class="form-label text-black-50">E-mail</label>
                </div>
                <div class="form-floating mb-3">                    
                    <input type="password" class="form-control form-control-lg" id="inputPassword" placeholder="Password" asp-for="Password" required>
                    <label for="inputPassword" class="form-label text-black-50">@Language.GetString("Password")</label>
                </div>
                <div class="mb-4 d-flex justify-content-end">
                    <a style="text-decoration: none" class="text-black-50" asp-page="/Partial/_RecoverPasswordFirstStep">@Language.GetString("ForgetPassword")</a>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn w-75" style="background-color: #00C9EE; color: white">@Language.GetString("Login")</button>
                </div>                
            </form>

            <div class="d-flex mt-3 align-items-center justify-content-center text-black-50">
                <hr class="w-25 me-3" /> @Language.GetString("Or") <hr class="w-25 ms-3 " />                
            </div>

            <div class="d-flex justify-content-center mt-2">
                <img src="~/icons/social-media/google.svg" class="mx-3" style="width: 24px"/>
                <img src="~/icons/social-media/facebook.svg" class="mx-3" style="width: 24px" />
                <img src="~/icons/social-media/twitter.svg" class="mx-3" style="width: 24px" />
            </div>

            <div class="d-flex flex-column align-items-center mt-5">
                <span class="text-black-50 mb-1">@Language.GetString("DontRegister")</span>
                <button id="buttonQuickPlay" type="button" class="btn w-75" style="background-color: #00C9EE; color: white">@Language.GetString("QuickPlay")</button>
            </div>            
        </div>

        @*Form de sala instantanea*@
        <div id="formQuickPlayContent" class="col-12 col-lg-4 text-center d-none">
            <h1 class="mb-5" style="color:#00C9EE">@Language.GetString("QuickPlay")</h1>

            <form id="enterQuickPlayForm" class ="needs-validation" novalidate>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control form-control-lg" id="inputNameQuickPlay" placeholder="Seu nome" required>
                    <label for="inputNameQuickPlay" class="form-label text-black-50">@Language.GetString("YourName")</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control form-control-lg" id="idQuickPlay" placeholder="ID da sala" required>
                    <label for="idQuickPlay" class="form-label text-black-50">@Language.GetString("RoomId")</label>
                </div>
                <div class="d-flex flex-column align-items-center mb-5">                    
                    <button type="submit" class="btn w-75" style="background-color: #00C9EE; color: white">@Language.GetString("Login")</button>
                    <a id="linkGoBackToLogin" class="mt-2 mb-5" style="cursor: pointer; text-decoration: none; color:#00C9EE">@Language.GetString("Cancel")</a>
                    <a href="@Url.Action("OpenCreateQuickRoom", "Rooms")" type="button" class="btn w-75" style="background-color: #00C9EE; color: white">@Language.GetString("CreateNewRoom")</a>
                </div>
            </form>
        </div>
    </div>    
</div>

<script src="~/js/pages/index.js" asp-append-version="true"></script>
<script>
    var loginUrl = '@Url.Action("Login", "Account")';
    var dashboardUrl = '@Url.Action("Index", "Dashboard")';
    var openCreateQuickRoomUrl = '@Url.Action("OpenCreateQuickRoom", "Room")';
    var createQuickUserUrl = '@Url.Action("CreateQuickUser", "Account")';
    var openRoomUrl = '@Url.Action("OpenRoom", "Rooms")';
</script>